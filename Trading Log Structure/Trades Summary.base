formulas:
  Image: file.embeds[0]
views:
  - type: cards
    name: Trades Summary
    filters:
      and:
        - file.inFolder("Trades/Trade")
        - file.name != "Trade Template"
        - '!file.name.contains("Error")'
    order:
      - file.name
      - PnL
      - RR
      - Risk
    sort:
      - property: exit_date
        direction: DESC
    image: formula.Image
    imageFit: contain
